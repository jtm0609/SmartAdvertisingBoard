<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/advertise_img"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_round"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">
    <TextView
        android:id="@+id/advertise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="테스트 동영상"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_weight="2"/>

        <TextView
            android:id="@+id/advertise_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020-07-03"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"/>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@drawable/myadvertise_play"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/timeline_upload_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="타임라인에 올리기"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/web_upload_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="웹사이트에 올리기"
            android:layout_weight="1"/>



    </LinearLayout>

</LinearLayout>