<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoEdit.VideoEditAtivity"
    android:id="@+id/con"
    android:background="#4b687c">

    <LinearLayout
        android:id="@+id/video_edit_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/black"/>
    <FrameLayout

        android:id="@+id/video_eidt_container"

        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/video_edit_top">

        <VideoView

            android:id="@+id/video_eidt_video"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/video_edit_bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/video_eidt_container" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_edit_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_edit_bottom"
        android:background="#5e7e9b"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_edit_recycler"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:background="#4b687c">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="editor"
            android:textColor="@android:color/black"
            android:textSize="18sp"

            />

    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>